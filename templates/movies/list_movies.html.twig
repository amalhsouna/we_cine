{% if movies|length %}
{% for movie in movies.results %}
   <div class="card d-flex flex-row align-items-start">
    <img src="https://image.tmdb.org/t/p/w500/{{ movie.posterPath }}" class="card-img-left img-fluid movie-poster" alt="{{ movie.title }}">
    <div class="card-body d-flex flex-column justify-content-between">
        <div>
            <div class="d-flex justify-content-between align-items-left col-9">
                <h5 class="card-title mb-0">{{ movie.title }}</h5>
                <p class="card-text mb-0 stars">
                    {% for i in 1..5 %}
                        {% if i <= (movie.voteAverage / 2)|round %}
                            ★
                        {% else %}
                            ☆
                        {% endif %}
                    {% endfor %}
                </p>
                <p class="rate mt-1">({{ movie.voteCount }} votes)</p>
            </div>
            <p class="release-date">{{ movie.releaseDate|date("Y") }}</p>
        </div>
        <p class="card-text description">{{ movie.overview }}</p>
        <div class="d-flex justify-content-end">
          <a href="#" class="btn btn-primary" id="openModalButton" data-id="{{ movie.id }}" data-bs-toggle="modal" data-bs-target="#detailModal">
                Lire les détails
         </a>
        </div>
    </div>
</div>
{% endfor %}
{% endif %}